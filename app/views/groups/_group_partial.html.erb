<div class="span-12 group-index-partial">
  <!-- NOTE: group is a local variable passed in through the index view -->
  <span class="span-8 colborder"><%= group_partial.name %></span> <!-- display the organization name too? -->
  <span class="span-3 last"> <%= link_to 'Edit group', group_path(group_partial) %> </span>
  <hr />
  <span class="span-11">
  	<% usrs = group_partial.users %>
	<% usrs.each do |usr| %>
		<%= usr.first_name + " " + usr.last_name + ", " %>
	<% end %>
  </span>
  <hr />

  Tasks
  <% tasks = group_partial.tasks %>
  <% tasks.each do |task| %>
	<%= link_to task.name, task_path(task) %>
	<br />
  <% end %>
  <br />
  <%= link_to "+ Add a task", new_task_path %>
</div>
