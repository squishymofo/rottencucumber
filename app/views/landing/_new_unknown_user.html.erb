<% content_for :script do %>
  $(document).ready(function () {
    $("#dialog-form-new").dialog({
      dialogClass: 'some-class',
      width: "auto",
      title: "Hello unrecognized user",
      resizable: false,
      draggable: false,
      modal: true
    });
  });
    $(function() {
       $('#login_button').button();
       $('#skip_it_button').button();
       $('#signup_button').button();
    });

<% end %>
