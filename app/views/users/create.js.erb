$("#dialog-form").html("<%= escape_javascript(render :partial => 'check_email') %>");
$(function () {
  $("#dialog-form").dialog({
    resizable: false,
    draggable: false,
    position: "center",
    dialogClass: 'some-class',
    modal: true,
    close: function(event, ui) {  $("body").prepend("<%= escape_javascript(render :partial => 'shared/new_dialog_div') %>")},
    buttons: {
      "Ok": function() {
        $(this).dialog('close');
      }
    }
  });
});
